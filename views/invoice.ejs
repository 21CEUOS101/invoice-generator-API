<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <style>
        /* Add your custom styles here */
        body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 20px;
        background-color: #f5f7fa; /* Soft blue background for visual appeal */
        }

        .invoice-container {
        width: 700px; /* Adjust for desired width */
        margin: 0 auto;
        border: 1px solid #2196f3; /* Light blue border for a modern look */
        text-align : center;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        background-color: #fff; /* Maintain white background for content clarity */
        }

        /* Header section */
        .header {
        display: flex;
        align-items: center;
        justify-content : center;
        margin-bottom: 20px;
        }

        .company-logo {
        height: 50px; /* Adjust for logo size */
        margin-right: 15px;
        }

        .header h2 {
        font-size: 24px;
        font-weight: bold;
        }

        /* Section highlights */
        .company-details,
        .bill-details,
        .total-section,
        .payment-details {
        border-bottom: 1px solid #ccc;
        padding-bottom: 10px;
        margin-bottom: 15px;
        }

        .company-details p,
        .bill-details p,
        .total-section p,
        .payment-details p {
        margin-bottom: 5px;
        }

        /* Product table */
        .product-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-family: 'Roboto', sans-serif; /* Change the font family as needed */
        }

        .product-table th,
        .product-table td {
        padding: 12px;
        text-align: left;
        border: 1px solid #5f5f5f;
        font-size: 14px;
        }

        /* Table header styling */
        .product-table th {
        background-color: #f4f5fc; /* Lighter blue for table headers */
        font-weight: bold;
        color: #333;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 16px;
        }

        /* Table row styling */
        .product-table td {
        background-color: #f9f9f9;
        color: #000000;
        }

        /* Total section emphasis */
        .total-section p {
        font-weight: bold;
        color: #2196f3; /* Highlight total amount in blue */
        }

        .payment-details p {
        margin-bottom: 0; /* Remove extra spacing for last paragraph */
        }

    </style>
</head>

<body>
    <div class="invoice-container">
        <div class="header">
            <h2>Stark Industries</h2>
        </div>

        <div class="company-details">
            <p>Address: 123 Main Street, Anytown, USA</p>
            <p>Phone: +1 (555) 123-4567</p>
            <p>GST No: ABC123XYZ456</p>
        </div>
        

        <div class="bill-details">
            <p>Cashier ID: C1221</p>
            <br/>
            <p>Customer Name: <%= username %></p>
            <p>Bill Date: <%= billDate %></p>
            <p>Bill Number: <%= billNumber %></p>
        </div>

        <table class="product-table">
            <thead>
                <tr>
                    <th>No.</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Price per Item</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach((product , i) => { %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td><%= product.quantity %></td>
                        <td><%= product.price %></td>
                        <td><%= t_price[i] %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <div class="total-section">
            <p>Total Quantity: <%= totalQuantity %></p>
            <p>Total Amount: <%= totalAmount %></p>
        </div>

        <div class="payment-details">
            <p>Payment Type: <%= paymentType %></p>
            <% if (paymentType === 'Online') { %>
                <p>Transaction Details: <%= transactionDetails %></p>
            <% } %>
        </div>
    </div>
</body>

</html>
